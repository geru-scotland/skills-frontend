<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/css/leaderboard.css">
    <script src="/js/leaderboard.js" type="module"></script>
</head>
<body>
<div class="container">
    <h1>Leaderboard</h1>
    <table>
        <thead>
        <tr>
            <th>Rank</th>
            <th>Username</th>
            <th>Score</th>
            <th>Badge</th>
        </tr>
        </thead>
        <tbody>
        <% users.forEach((user, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= user.username %></td>
                <td><%= user.score %></td>
                <td><%= user.badge %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
